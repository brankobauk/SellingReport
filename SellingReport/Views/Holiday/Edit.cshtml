@model SellingReport.Models.ViewModels.HolidayViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Holiday</legend>

        @Html.HiddenFor(model => model.Holiday.HolidayId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Holiday.CountryId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(x => x.Holiday.CountryId, Model.Countries)
        </div>

        <div class="editor-label">
            <label>Date</label>
            <input type="text" class="date" readonly="readonly" id="holidayDate" name="holidayDate" />
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/holiday")
}

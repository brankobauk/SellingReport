@model SellingReport.Models.ViewModels.VariableHolidayViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>VariableHoliday</legend>

        @Html.HiddenFor(model => model.VariableHoliday.VariableHolidayId)

        <div class="editor-label">
            @Html.LabelFor(model => model.VariableHoliday.Country)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(x => x.VariableHoliday.CountryId, Model.Countries)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.VariableHoliday.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VariableHoliday.Name)
            @Html.ValidationMessageFor(model => model.VariableHoliday.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.VariableHoliday.Date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.VariableHoliday.Date)
            @Html.ValidationMessageFor(model => model.VariableHoliday.Date)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/variableholiday")
}

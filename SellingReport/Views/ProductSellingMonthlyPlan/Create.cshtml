@using System.Globalization
@model SellingReport.Models.ViewModels.ProductSellingMonthlyPlanViewModel

@{
    ViewBag.Title = "Create Plan";
}
@{
    Html.EnableClientValidation(false);
}
<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>ProductSellingPlan</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.ProductSellingMonthlyPlan.CountryId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(x => x.ProductSellingMonthlyPlan.CountryId, Model.Countries)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.ProductSellingMonthlyPlan.Month)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(x => x.ProductSellingMonthlyPlan.Month, Model.Month)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.ProductSellingMonthlyPlan.Year)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(x => x.ProductSellingMonthlyPlan.Year, Model.Year)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.ProductSellingMonthlyPlan.PlannedValue)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ProductSellingMonthlyPlan.PlannedValue)
            @Html.ValidationMessageFor(model => model.ProductSellingMonthlyPlan.PlannedValue)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
